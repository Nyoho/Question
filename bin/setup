#!/usr/bin/env sh
# Thanks: https://robots.thoughtbot.com/creating-your-first-ios-framework

if ! command -v carthage > /dev/null; then
  printf 'Carthage is not installed.\n'
  printf 'See https://github.com/Carthage/Carthage for install instructions.\n'
  exit 1
fi

carthage update --platform Mac --use-submodules --no-use-binaries
